			Если  crm_RetailCRMПовтИсп.ПолучитьЗначениеКонстанты("GUIDОрганизации") = Истина Тогда
				xmlIdТовара = СокрЛП(" " + ДокЗаказ.Организация.УникальныйИдентификатор() + "#" + xmlIdТовара);
