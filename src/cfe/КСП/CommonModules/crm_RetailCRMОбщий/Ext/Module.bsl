	//получаем id клиента
	ИДКлиента = crm_RetailCRMОбработка.УТ11_ПолучитьЗначениеСвойстваОбъекта(ДокЗаказ.Контрагент, СтруктураПараметров.СвойствоКонтрагентов);
	Если ЗначениеЗаполнено(ИДКлиента) Тогда
